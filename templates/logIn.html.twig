{% extends 'page.html.twig' %}

{% block content %}
    <form action="login" method="post">
        <input type="hidden" name="callback" value="{{ _get.callback }}">
        <p><input type="password" name="pass" placeholder="{{ copy.password[_lang] }}" autofocus required></p>
        {% include 'data-protection.html.twig' %}
        <p><input type="submit" value="{{ copy.next[_lang] }}" class="button"></p>
    </form>
{% endblock %}